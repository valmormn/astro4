{
  "extends": "astro/tsconfigs/strict",
  "include": {
    "strictNullChecks": true,
    "allowJs": true,
    // Replace `astro/client` with `@astrojs/image/client`
    "types": ["@astrojs/image/client"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"]
    }
  }
}